<div class="bg-white shadow-md rounded-lg p-6">
  <h2 class="text-xl font-semibold text-gray-800 mb-4">Projects</h2>
  <h1 class="text-2xl font-bold text-gray-800 mb-4"><%= @project.name %></h1>

  <% if flash[:notice] %>
    <p class="text-green-600 bg-green-100 p-4 rounded-md mb-4"><%= flash[:notice] %></p>
  <% end %>

  <ul class="space-y-2 mb-4">
    <% @project.todos.each do |todo| %>
      <li class="flex items-center border-b py-2">
        <%= link_to todo.name, todo_path(todo), class: "text-indigo-600 hover:text-indigo-800" %>
        <span class="ml-2 <%= todo.completed ? 'text-green-500' : 'text-red-500' %>">
          <i class="fas <%= todo.completed ? 'fa-check-circle' : 'fa-times-circle' %>"></i>
        </span>
      </li>
    <% end %>
  </ul>

  <div class="flex space-x-4">
    <%= link_to edit_project_path(@project), class: "text-indigo-600 hover:text-indigo-800 flex items-center" do %>
      <i class="fas fa-edit mr-1"></i> Edit Project
    <% end %>
    <%= link_to "Back to projects", projects_path, class: "text-indigo-600 hover:text-indigo-800" %>
    <%= button_to project_path(@project), method: :delete, class: "text-red-600 hover:text-red-800 flex items-center" do %>
      <i class="fas fa-trash-alt mr-1"></i> Delete Project
    <% end %>
  </div>
</div>
