<div class="bg-white shadow-md rounded-lg p-6">
  <% if notice %>
    <p class="text-green-600 bg-green-100 p-4 rounded-md mb-4"><%= notice %></p>
  <% end %>

  <%= render @todo %>

  <div class="mt-4 flex space-x-4">
    <%= link_to edit_todo_path(@todo), class: "text-indigo-600 hover:text-indigo-800 flex items-center" do %>
      <i class="fas fa-edit mr-1"></i> Edit this todo
    <% end %>
    <%= link_to "Back to todos", todos_path, class: "text-indigo-600 hover:text-indigo-800" %>
    <%= button_to @todo, method: :delete, class: "text-red-600 hover:text-red-800 flex items-center" do %>
      <i class="fas fa-trash-alt mr-1"></i> Destroy this todo
    <% end %>
  </div>
</div>
